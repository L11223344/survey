<link rel="stylesheet" href="../../public/images/css/editform.css">
<div>
    <h1 style="text-align: center; margin-top: 30px;font-family: initial;font-family: inherit;">
        Login with your Credentials
    </h1>

    <div style="border: 1px solid #b9b9b9;
        max-width: 256px;
        margin: auto;
        margin-top: 50px;
        padding: 1rem 1rem">
        <div class="forms_slider">
            <form action="/v1/auth/login" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input style="    margin-bottom: 10px;
                        display: block;
                        width: 100%;
                        padding: 7px;
                        margin-top: 3px
                    ;" name="Username" style="margin-bottom:10px" type="text" class="form-control"
                        id="exampleInputEmail1" aria-describedby="emailHelp" value="" placeholder="UserName" required>

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Email</label>
                    <input style="margin-bottom: 10px; display: block;
                        width: 100%;
                        padding: 7px;
                        margin-top: 3px;" name="email" type="email" class="form-control" id="exampleInputPassword1"
                        value="" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input style="margin-bottom: 10px;
                        display: block;
                        width: 100%;
                        padding: 7px;
                        margin-top: 3px;" name="password" type='password' class="form-control"
                        id="exampleInputPassword1" value="" placeholder="" required>
                </div>
                <button style="
                border: none;
                width: 100%;
                padding: 9px 5px;
                cursor: pointer;
                background-color: #4444ff;
                color: white;
                font-size: 17px;
            " id='form_button' type="submit" class="btn btn-primary">Login</button>

            </form>

        </div>
    </div>
</div>
</div>